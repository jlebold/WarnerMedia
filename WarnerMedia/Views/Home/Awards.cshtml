@model ICollection<WarnerMedia.Models.Dto.AwardDto>

<h3>Awards</h3>

@if (Model.Count > 0)
{

    <table id="awardsTable" class="table table-striped table-bordered table-sm table-dark" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">
                    Award
                </th>
                <th class="th-sm">
                    Award Company
                </th>
                <th class="th-sm">
                    Award Won?
                </th>
                <th class="th-sm">
                    Award Year
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var award in Model)
            {
                <tr>
                    <td>@award.Award1</td>
                    <td>@award.AwardCompany</td>
                    <td>@award.AwardWon</td>
                    <td>@award.AwardYear</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    Award
                </th>
                <th>
                    Award Company
                </th>
                <th>
                    Award Won?
                </th>
                <th>
                    Award Year
                </th>
            </tr>
        </tfoot>
    </table>

    <br />

    <a class="btn btn-dark" onclick="history.go(-1); return false;" href="#">&laquo; Back</a>


    @section Scripts
    {
        <script>
            $(document).ready(function () {
                $('#awardsTable').DataTable();
            });
        </script>
    }
}
else
{
    <div>Aww shucks, looks like this film was never nominated for any awards.</div>
}
