@model ICollection<WarnerMedia.Models.Dto.TitleParticipantDto>

<h3>Participants</h3>
<table id="participantsTable" class="table table-striped table-bordered table-sm table-dark" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Name
            </th>
            <th class="th-sm">
                Is on Screen?
            </th>
            <th class="th-sm">
                Role Type
            </th>
            <th class="th-sm">
                Is key role?
            </th>
            <th class="th-sm">
                Participant Type
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var titleParticipant in Model)
        {
            <tr>
                <td>@titleParticipant.Participant.Name</td>
                <td>@titleParticipant.IsOnScreen</td>
                <td>@titleParticipant.RoleType</td>
                <td>@titleParticipant.IsKey</td>
                <td>@titleParticipant.Participant.ParticipantType</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Name
            </th>
            <th>
                Is on Screen?
            </th>
            <th>
                Role Type
            </th>
            <th>
                Is key role?
            </th>
            <th>
                Participant Type
            </th>
        </tr>
    </tfoot>
</table>
<br />
<a class="btn btn-dark" onclick="history.go(-1); return false;" href="#">&laquo; Back</a>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#participantsTable').DataTable();
        });
    </script>
}